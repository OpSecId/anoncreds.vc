<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ session.get('title', 'AnonCreds VC Demo') }}</title>
    <meta name="description" content="AnonCreds VC Demo - Experience the power of Anonymous Credentials with WebVH">
    <link rel="icon" href="{{ url_for('static', filename='img/icon.png') }}" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/css/tabler.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
</head>

<body>
    <div class="page">
        <!-- Navbar -->
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="{{ url_for('index') }}" class="navbar-brand-image">
                        <img src="https://raw.githubusercontent.com/hyperledger/anoncreds-spec/main/spec/images/logo/hl_anoncreds_colour.svg"
                             width="120" alt="AnonCreds" class="navbar-brand-image">
                    </a>
                </div>
                <div class="navbar-nav flex-row order-md-last">
                    <div class="nav-item d-none d-md-flex me-3">
                        <div class="btn-list">
                            <button onclick="toggleVysorPanel()" class="btn btn-outline-primary btn-sm" title="Share Device Screen" id="vysor-toggle-btn">
                                <i class="ti ti-device-mobile-share me-1"></i>
                                Share Device
                            </button>
                            <a href="{{ url_for('restart') }}" class="btn btn-outline-secondary btn-sm" title="Restart Demo">
                                <i class="ti ti-refresh me-1"></i>
                                Restart
                            </a>
                        </div>
                    </div>
                    <div class="d-none d-md-flex">
                        <div class="nav-item">
                            <button class="nav-link px-0" id="theme-toggle" title="Toggle theme">
                                <i class="ti ti-sun" id="theme-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="page-wrapper">
            <!-- Page header -->
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <div class="page-pretitle">
                                {{ session.demo.issuer.name if session.demo.issuer else 'AnonCreds WebVH Demo' }}
                            </div>
                            <h2 class="page-title">
                                Experience Anonymous Credentials
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Page body -->
            <div class="page-body">
                <div class="container-xl">
                    <!-- Step Indicator -->
                    <ul class="steps steps-green mb-4">
                        <li class="step-item {{ 'active' if request.endpoint == 'connection' else 'completed' if session.demo.get('connection_state') == 'active' else '' }}">
                            <i class="ti ti-device-mobile me-2"></i>
                            Connection
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'issuance' else 'completed' if session.demo.get('issuance_state') == 'done' else '' }}">
                            <i class="ti ti-certificate me-2"></i>
                            Issuance
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'verification' else 'completed' if session.demo.get('presentation_state') == 'done' else '' }}">
                            <i class="ti ti-shield-check me-2"></i>
                            Verification
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'revocation' else 'completed' if session.demo.get('revocation_presentation_state') == 'done' else '' }}">
                            <i class="ti ti-ban me-2"></i>
                            Revocation
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'results' else '' }}">
                            <i class="ti ti-trophy me-2"></i>
                            Results
                        </li>
                    </ul>

                    {% block page %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-transparent d-print-none">
        <div class="container-xl">
            <div class="row text-center align-items-center flex-row-reverse">
                <div class="col-lg-auto ms-lg-auto">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            <a href="https://anoncreds.org" target="_blank" class="link-secondary" rel="noopener">
                                AnonCreds Specification
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://hyperledger.github.io/anoncreds-spec/" target="_blank" class="link-secondary" rel="noopener">
                                Documentation
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/hyperledger/anoncreds-spec" target="_blank" class="link-secondary" rel="noopener">
                                GitHub
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            Copyright Â© 2025
                            <a href="https://opsecid.com" target="_blank" class="link-secondary" rel="noopener">OpSecId</a>.
                            All rights reserved.
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/hyperledger/anoncreds-spec/blob/main/LICENSE" target="_blank" class="link-secondary" rel="noopener">
                                License
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Vysor Side Panel -->
    <div id="vysor-panel" class="vysor-panel">
        <div class="vysor-panel-header">
            <div class="d-flex align-items-center">
                <i class="ti ti-device-mobile-share me-2"></i>
                <h4 class="mb-0">Device Screen</h4>
            </div>
            <div class="btn-list">
                <button onclick="promptVysorUrl()" class="btn btn-sm btn-primary" title="Set Vysor URL">
                    <i class="ti ti-link"></i>
                </button>
                <button onclick="toggleVysorPanel()" class="btn btn-sm btn-ghost-secondary" title="Close Panel">
                    <i class="ti ti-x"></i>
                </button>
            </div>
        </div>
        <div class="vysor-panel-body">
            <div id="vysor-placeholder" class="vysor-placeholder">
                <div class="text-center py-5">
                    <i class="ti ti-device-mobile-off" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="text-muted mt-3">Click "Set Link" to enter your Vysor share URL</p>
                    <button onclick="promptVysorUrl()" class="btn btn-primary btn-sm">
                        <i class="ti ti-link me-1"></i>
                        Set Vysor URL
                    </button>
                </div>
            </div>
            <iframe id="vysor-iframe" class="vysor-iframe" style="display: none;"></iframe>
        </div>
    </div>

    <!-- Libs JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/js/tabler.min.js"></script>
    
    <!-- Vysor Integration -->
    <script>
        function toggleVysorPanel() {
            const panel = document.getElementById('vysor-panel');
            const btn = document.getElementById('vysor-toggle-btn');
            const isOpen = panel.classList.contains('vysor-panel-open');
            
            if (isOpen) {
                panel.classList.remove('vysor-panel-open');
                btn.innerHTML = '<i class="ti ti-device-mobile-share me-1"></i>Share Device';
            } else {
                panel.classList.add('vysor-panel-open');
                btn.innerHTML = '<i class="ti ti-device-mobile-x me-1"></i>Hide Device';
            }
        }
        
        function promptVysorUrl() {
            const currentUrl = sessionStorage.getItem('vysor_url') || '';
            const url = prompt('Enter your Vysor share URL:', currentUrl);
            
            if (url && url.trim()) {
                setVysorUrl(url.trim());
            }
        }
        
        function setVysorUrl(url) {
            sessionStorage.setItem('vysor_url', url);
            
            const iframe = document.getElementById('vysor-iframe');
            const placeholder = document.getElementById('vysor-placeholder');
            
            iframe.src = url;
            iframe.style.display = 'block';
            placeholder.style.display = 'none';
            
            // Open panel if not already open
            const panel = document.getElementById('vysor-panel');
            if (!panel.classList.contains('vysor-panel-open')) {
                toggleVysorPanel();
            }
        }
        
        // Restore Vysor URL on page load
        document.addEventListener('DOMContentLoaded', function() {
            const savedUrl = sessionStorage.getItem('vysor_url');
            if (savedUrl) {
                setVysorUrl(savedUrl);
            }
        });
    </script>
    
    <!-- Theme Switcher -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const html = document.documentElement;
            
            // Get saved theme or default to light
            const savedTheme = localStorage.getItem('theme') || 'light';
            html.setAttribute('data-bs-theme', savedTheme);
            updateIcon(savedTheme);
            
            themeToggle.addEventListener('click', function() {
                const currentTheme = html.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                
                html.setAttribute('data-bs-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateIcon(newTheme);
            });
            
            function updateIcon(theme) {
                if (theme === 'dark') {
                    themeIcon.className = 'ti ti-moon';
                } else {
                    themeIcon.className = 'ti ti-sun';
                }
            }
        });
    </script>
    
    <!-- Vysor Panel Styles -->
    <style>
        .vysor-panel {
            position: fixed;
            top: 0;
            right: -450px;
            width: 450px;
            height: 100vh;
            background: var(--tblr-bg-surface);
            box-shadow: -4px 0 24px rgba(0,0,0,0.15);
            z-index: 1050;
            transition: right 0.3s ease;
            display: flex;
            flex-direction: column;
        }
        
        .vysor-panel-open {
            right: 0;
        }
        
        .vysor-panel-header {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--tblr-border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--tblr-bg-surface-secondary);
        }
        
        .vysor-panel-body {
            flex: 1;
            overflow: hidden;
            position: relative;
        }
        
        .vysor-iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        .vysor-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        /* Responsive: hide on mobile */
        @media (max-width: 768px) {
            .vysor-panel {
                width: 100%;
                right: -100%;
            }
        }
        
        /* Subtle backdrop when panel is open (very light) */
        body:has(.vysor-panel-open) .page::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 450px;
            bottom: 0;
            background: rgba(0,0,0,0.03);
            z-index: 1040;
            animation: fadeIn 0.3s ease;
            pointer-events: none;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        @media (max-width: 768px) {
            body:has(.vysor-panel-open) .page::before {
                right: 0;
            }
        }
    </style>

</body>

</html>