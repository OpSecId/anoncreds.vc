<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ session.get('title', 'AnonCreds VC Demo') }}</title>
    <meta name="description" content="AnonCreds VC Demo - Experience the power of Anonymous Credentials with WebVH">
    <link rel="icon" href="{{ url_for('static', filename='img/icon.png') }}" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/css/tabler.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
</head>

<body>
    <div class="page">
        <!-- Navbar -->
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="{{ url_for('index') }}" class="navbar-brand-image">
                        <img src="https://raw.githubusercontent.com/hyperledger/anoncreds-spec/main/spec/images/logo/hl_anoncreds_colour.svg"
                             width="120" alt="AnonCreds" class="navbar-brand-image">
                    </a>
                </div>
                <div class="navbar-nav flex-row order-md-last">
                    <div class="nav-item d-none d-md-flex me-3">
                        <div class="btn-list">
                            <a href="{{ url_for('restart') }}" class="btn btn-outline-secondary btn-sm" title="Restart Demo">
                                <i class="ti ti-refresh me-1"></i>
                                Restart
                            </a>
                        </div>
                    </div>
                    <div class="d-none d-md-flex">
                        <div class="nav-item">
                            <button class="nav-link px-0" id="theme-toggle" title="Toggle theme">
                                <i class="ti ti-sun" id="theme-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="page-wrapper">
            <!-- Page header -->
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <div class="page-pretitle">
                                {{ session.demo.issuer.name if session.demo.issuer else 'AnonCreds WebVH Demo' }}
                            </div>
                            <h2 class="page-title">
                                Experience Anonymous Credentials
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Page body -->
            <div class="page-body">
                <div class="container-xl">
                    <!-- Step Indicator -->
                    <ul class="steps steps-green mb-4">
                        <li class="step-item {{ 'active' if request.endpoint == 'connection' else '' }}">
                            <i class="ti ti-device-mobile me-2"></i>
                            Connection
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'issuance' else 'completed' if session.demo.get('issuance_state') == 'done' else '' }}">
                            <i class="ti ti-certificate me-2"></i>
                            Issuance
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'verification' else 'completed' if session.demo.get('presentation_verified') else '' }}">
                            <i class="ti ti-shield-check me-2"></i>
                            Verification
                        </li>
                        <li class="step-item {{ 'active' if request.endpoint == 'results' else '' }}">
                            <i class="ti ti-trophy me-2"></i>
                            Results
                        </li>
                    </ul>

                    {% block page %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-transparent d-print-none">
        <div class="container-xl">
            <div class="row text-center align-items-center flex-row-reverse">
                <div class="col-lg-auto ms-lg-auto">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            <a href="https://anoncreds.org" target="_blank" class="link-secondary" rel="noopener">
                                AnonCreds Specification
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://hyperledger.github.io/anoncreds-spec/" target="_blank" class="link-secondary" rel="noopener">
                                Documentation
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/hyperledger/anoncreds-spec" target="_blank" class="link-secondary" rel="noopener">
                                GitHub
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            Copyright Â© 2025
                            <a href="https://opsecid.com" target="_blank" class="link-secondary" rel="noopener">OpSecId</a>.
                            All rights reserved.
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/hyperledger/anoncreds-spec/blob/main/LICENSE" target="_blank" class="link-secondary" rel="noopener">
                                License
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Libs JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/js/tabler.min.js"></script>
    
    <!-- Theme Switcher -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const html = document.documentElement;
            
            // Get saved theme or default to light
            const savedTheme = localStorage.getItem('theme') || 'light';
            html.setAttribute('data-bs-theme', savedTheme);
            updateIcon(savedTheme);
            
            themeToggle.addEventListener('click', function() {
                const currentTheme = html.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                
                html.setAttribute('data-bs-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateIcon(newTheme);
            });
            
            function updateIcon(theme) {
                if (theme === 'dark') {
                    themeIcon.className = 'ti ti-moon';
                } else {
                    themeIcon.className = 'ti ti-sun';
                }
            }
        });
    </script>

</body>

</html>