{% extends('layouts/base.jinja') %}
{% block page %}
<div class="row">
    <div class="col-lg-10 mx-auto">
        <!-- Presentation Request Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="ti ti-shield-check me-2"></i>
                    Presentation Request
                </h3>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="text-center mb-4 mb-lg-0">
                            <div class="shape shape-lg mb-3">
                                <i class="ti ti-shield-check icon icon-2 text-info"></i>
                            </div>
                            <h2 class="mb-3">Verify Your Credential</h2>
                            <p class="text-muted mb-4">A presentation request has been sent to your wallet. Please review and share the requested claims to complete the verification process.</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <!-- Requested Claims Preview -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="ti ti-list-check me-2"></i>
                                    {{ session.demo.presentation.name if session.demo.presentation else 'Over18' }} Request
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {% if session.demo.presentation and session.demo.presentation.attributes %}
                                            {% for attribute in session.demo.presentation.attributes %}
                                            <div class="mb-3">
                                                <small class="text-muted d-block">{{ attribute|title }}</small>
                                                <div class="fw-bold">
                                                    <i class="ti ti-check text-success me-1"></i>
                                                    Required
                                                </div>
                                            </div>
                                            {% endfor %}
                                        {% else %}
                                            <div class="mb-3">
                                                <small class="text-muted d-block">Family Name</small>
                                                <div class="fw-bold">
                                                    <i class="ti ti-check text-success me-1"></i>
                                                    Required
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <small class="text-muted d-block">Age Verification</small>
                                            <div class="fw-bold">
                                                <i class="ti ti-check text-success me-1"></i>
                                                Over 18
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Verification Status Card -->
        <div class="card mt-4" id="verification-status-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="ti ti-shield me-2"></i>
                    Verification Status
                </h3>
                <div class="card-actions">
                    <a href="{{ url_for('verification', new_request=True) }}" class="btn btn-outline-primary btn-sm">
                        <i class="ti ti-plus me-1"></i>
                        New Request
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center" id="verification-status-content">
                    {% if session.demo.presentation_state == 'done' and session.demo.presentation_verified == 'true' %}
                        <div class="shape shape-md me-3">
                            <i class="ti ti-check icon icon-1 text-success"></i>
                        </div>
                        <div class="flex-fill">
                            <h4 class="mb-1 text-success">Verification Successful</h4>
                            <p class="text-muted mb-0">Your credential has been successfully verified and all claims are valid</p>
                        </div>
                        <span class="badge bg-green text-green-fg">Verified</span>
                    {% elif session.demo.presentation_state == 'done' and session.demo.presentation_verified == 'false' %}
                        <div class="shape shape-md me-3">
                            <i class="ti ti-x icon icon-1 text-danger"></i>
                        </div>
                        <div class="flex-fill">
                            <h4 class="mb-1 text-danger">Verification Failed</h4>
                            <p class="text-muted mb-0">The credential verification failed. Please check your credential status.</p>
                        </div>
                        <span class="badge bg-red text-red-fg">Failed</span>
                    {% elif session.demo.presentation_state == 'request-sent' %}
                        <div class="shape shape-md me-3">
                            <i class="ti ti-clock icon icon-1" style="color: #b45309;"></i>
                        </div>
                        <div class="flex-fill">
                            <h4 class="mb-1" style="color: #b45309;">Request Sent</h4>
                            <p class="text-muted mb-0">Presentation request has been sent to your wallet. Please respond to continue.</p>
                        </div>
                        <span id="verification-status-badge" class="badge bg-blue-lt">
                            <i class="ti ti-refresh spin me-1"></i>
                            Checking...
                        </span>
                    {% else %}
                        <div class="shape shape-md me-3">
                            <i class="ti ti-hourglass icon icon-1 text-info"></i>
                        </div>
                        <div class="flex-fill">
                            <h4 class="mb-1" style="color: #6b7280;">Ready to Verify</h4>
                            <p class="text-muted mb-0">Click "New Request" to send a presentation request to your wallet</p>
                        </div>
                        <span class="badge bg-blue text-blue-fg">Ready</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Verification Process -->
        <div class="card mt-4">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="ti ti-list me-2"></i>
                    Verification Process
                </h3>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="shape shape-md me-3">
                                <i class="ti ti-send icon icon-1 text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Send Request</h6>
                                <small class="text-muted">Presentation request is sent to your wallet</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="shape shape-md me-3">
                                <i class="ti ti-device-mobile icon icon-1 text-info"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Share Claims</h6>
                                <small class="text-muted">Review and share the requested claims from your wallet</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <div class="shape shape-md me-3">
                                <i class="ti ti-shield-check icon icon-1 text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Verification</h6>
                                <small class="text-muted">Claims are verified and validated</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="{{ url_for('issuance') }}" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Back to Issuance
            </a>
            <div>
                {% if session.demo.presentation_state == 'done' %}
                    <a href="{{ url_for('revocation') }}" class="btn btn-primary">
                        Continue to Revocation
                        <i class="ti ti-arrow-right ms-1"></i>
                    </a>
                {% else %}
                    <button class="btn btn-outline-warning" disabled>
                        Waiting for Verification
                        <i class="ti ti-clock ms-1"></i>
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    .spin {
        display: inline-block;
        animation: spin 1s linear infinite;
    }
    
    .fade-update {
        animation: fadeUpdate 0.5s ease-in-out;
    }
    
    @keyframes fadeUpdate {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
</style>

<script>
    // Auto-refresh functionality for verification status
    document.addEventListener('DOMContentLoaded', function() {
        {% if session.demo.presentation_state != 'done' %}
            const statusContent = document.getElementById('verification-status-content');
            const navigationDiv = document.querySelector('.d-flex.justify-content-between.align-items-center.mt-4');
            
            // Auto-refresh every 3 seconds if verification is not yet complete
            const autoRefreshInterval = setInterval(async function() {
                try {
                    console.log('Checking verification status...');
                    
                    // Fetch the current page (without query parameters)
                    const response = await fetch("{{ url_for('verification') }}");
                    const html = await response.text();
                    
                    // Parse the HTML
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    
                    // Extract the status card content using the specific ID
                    const newStatusContent = doc.getElementById('verification-status-content');
                    const newNavigation = doc.querySelector('.d-flex.justify-content-between.align-items-center.mt-4');
                    
                    if (newStatusContent && statusContent) {
                        // Add fade animation
                        statusContent.classList.add('fade-update');
                        
                        // Update the status content
                        setTimeout(() => {
                            statusContent.innerHTML = newStatusContent.innerHTML;
                            statusContent.classList.remove('fade-update');
                        }, 250);
                    }
                    
                    // Update navigation buttons
                    if (newNavigation && navigationDiv) {
                        navigationDiv.innerHTML = newNavigation.innerHTML;
                    }
                    
                    // Check if verification is now complete
                    if (newStatusContent && (newStatusContent.innerHTML.includes('Verification Successful') || newStatusContent.innerHTML.includes('Verification Failed'))) {
                        console.log('Verification complete!');
                        clearInterval(autoRefreshInterval);
                    }
                    
                } catch (error) {
                    console.error('Error refreshing status:', error);
                }
            }, 3000);
            
            // Clear interval if page is about to unload
            window.addEventListener('beforeunload', function() {
                clearInterval(autoRefreshInterval);
            });
        {% endif %}
    });
</script>
{% endblock %}